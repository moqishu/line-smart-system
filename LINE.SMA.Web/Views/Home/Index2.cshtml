            //}
            var isHas = $("#menu-toggler").hasClass("display");
            if (isHas == false) {
                tabPage.SetResize(mainsiderX);
            }
        });

        

        $('.menuItem').on('click', function (event) {
            var tabTitle = $(this).text().replace(/[\n\r]\s+/g, "");
            var url = $(this).attr("href");
            // 阻止a标签href默认跳转事件
            event.preventDefault()

            var menuid = $(this).attr("data-id");

            if ($("#tabs").tabPanel("exists", menuid)) {
                $("#tabs").tabPanel("show", menuid)
            } else {
                tabPage.addTabPage($(this), tabTitle, url);//增加tab
            }

            // 1.一级菜单
            var parentTree = $(this).parents('.main_menu');
            var sibFirstlis = parentTree.siblings('li');
            sibFirstlis.removeClass('active open');
            // 2.循环每一级ul
            $.each(sibFirstlis, function (i) {
                $(sibFirstlis[i]).children('ul').hide();
            });
            $('.main_menu').find('li').removeClass("active");
            $(this).parents('li').addClass("active");
            $(this).parents('.main_menu').addClass("open");

        });


    });
</script>