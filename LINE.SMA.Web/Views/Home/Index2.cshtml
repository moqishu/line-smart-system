<script>
    function getMenuData() {
        var menuData;
        $.ajax({
            url: "/Home/GetMenuInfo",
            type: "get",
            dataType: "json",
            async: false,
            success: function (data) {
                menuData = data;
            }
        });

        return menuData;
    }

    function GetLoadNav() {
        var data = getMenuData();
        var _html = "";
        $.each(data, function (i) {
            var _html = "";
            var row = data[i];
            if (row.parentid == "0") {
                if (i == 0) {
                    _html += '<li class="main_menu">';
                } else {
                    _html += '<li class="main_menu">';
                }
                _html += '<a href="#" class="dropdown-toggle">';
                if (row.icon == "") {
                    _html += '<i class="icon-desktop"></i>';
                } else {
                    _html += '<i class="menu-icon ' + row.icon + '"></i>';
                }
                _html += '<span class="menu-text"> ' + row.funname + ' </span>';
                _html += '<b class="arrow icon-angle-down"></b>';
                _html += '</a>';

                var childNodes = row.ChildNodes;
                if (childNodes.length > 0) {
                    _html += '<ul class="submenu">';
                    $.each(childNodes, function (i) {
                        var subrow = childNodes[i];
                        var url = subrow.funurl == null ? '#' : subrow.funurl;
                        _html += '<li>';
                        _html += '<a class="menuItem" href="' + url + '" data-id="' + subrow.Id + '"><i class="icon-double-angle-right"></i>' + subrow.funname + '</a>';
                        _html += '</li>';
                    });
                    _html += '</ul>';
                }
                _html += '</li>';
            }

            $(".nav.nav-list").append(_html);
        });
        //$(".nav.nav-list").append(_html);
    }

    GetLoadNav();

