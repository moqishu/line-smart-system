<script type="text/javascript">

    function getMenuData() {
        var menuData;
        $.ajax({
            url: "/System/GetMenuList",
            type: "get",
            dataType: "json",
            async: false,
            success: function (data) {
                menuData = data;
            }
        });

        return menuData;
    }

    function GetLoadNav() {
        var data = getMenuData();
        var _html = "";
        $.each(data, function (i) {
            var _html = "";
            var row = data[i];
            if (row.ParentId == "0") {
                if (i == 0) {
                    _html += '<li class="main_menu">';
                } else {
                    _html += '<li class="main_menu">';
                }
                _html += '<a href="#" class="dropdown-toggle">';
                if (row.Icon == "") {
                    _html += '<i class="fa glyphicon-list-alt"></i>';
                } else {
                    _html += '<i class="menu-icon fa  fa-desktop ' + row.Icon + '"></i>';
                }
                _html += '<span class="menu-text"> ' + row.Name + ' </span>';
                _html += '<b class="arrow icon-angle-down"></b>';
                _html += '</a>';

                var childNodes = row.ChildNodes;
                if (childNodes.length > 0) {
                    _html += '<ul class="submenu">';
                    $.each(childNodes, function (i) {
                        var subrow = childNodes[i];
                        var url = subrow.Url == null ? '#' : subrow.Url;
                        _html += '<li>';
                        _html += '<a class="menuItem" href="' + url + '" data-id="' + subrow.Id + '"><i class="icon-double-angle-right"></i>' + subrow.Name + '</a>';
                        _html += '</li>';
                    });
                    _html += '</ul>';
                }
                _html += '</li>';
            }

            $(".nav.nav-list").append(_html);
        });
        //$(".nav.nav-list").append(_html);
    }

    GetLoadNav();

    jQuery(function ($) {
        tabPage.initTabPage("tabs");

        $("#sidebar-collapse").click(function () {

            var mainsiderX = $("#sidebar").width();
            if (mainsiderX > 43) {
                mainsiderX = 42;
            } else {
                mainsiderX = 190;
            }
            tabPage.SetResize(mainsiderX);
        });


        $('.menuItem').on('click', function (event) {
            var tabTitle = $(this).text().replace(/[\n\r]\s+/g, "");
            var url = $(this).attr("href");
            // 阻止a标签href默认跳转事件
            event.preventDefault()

            var menuid = $(this).attr("data-id");

            if ($("#tabs").tabPanel("exists", menuid)) {
                $("#tabs").tabPanel("show", menuid)
            } else {
                tabPage.addTabPage($(this), tabTitle, url);//增加tab
            }

            // 1.一级菜单
            var parentTree = $(this).parents('.main_menu');
            var sibFirstlis = parentTree.siblings('li');
            sibFirstlis.removeClass('active open');
            // 2.循环每一级ul
            $.each(sibFirstlis, function (i) {
                $(sibFirstlis[i]).children('ul').hide();
            });
            $('.main_menu').find('li').removeClass("active");
            $(this).parents('li').addClass("active");
            $(this).parents('.main_menu').addClass("open");

        });
    });
</script>
